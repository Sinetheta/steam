<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <%= render :partial => 'form' %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-12">
    <div class="page-header">
      <div class="btn-group pull-right">
        <%= link_to('Previous Pay Period', entries_path(pay_period: pp_start_str(@previous)), { class: 'btn btn-default' }) if @previous %>
        <%= link_to('Next Pay Period', entries_path(pay_period: pp_start_str(@next)), { class: 'btn btn-default' }) if @next %>
      </div>
      <h2>My Entries <small>from <%= date_str @pay_period.begin %> to <%= date_str @pay_period.end %></small></h2>
    </div>
      <%= render 'entries/entry' %>
    </div>
  </div>
</div>
