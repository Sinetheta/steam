<% content_for :body_class, 'login-page' %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row">
      <div class="col-xs-offset-2 col-xs-8 col-sm-offset-3 col-sm-6 col-md-offset-4 col-md-4">
          <h1>Please Login</h1>

          <p><%= link_to raw('<span class="btn-split"><span class="imgicon-lg imgicon-lg-google-plus"></span></span> Sign in with Google'), user_omniauth_authorize_path(:google_oauth2), :class => 'btn btn-lg btn-success btn-block btn-social btn-google-plus googleplus-login' %></p>

          <p>OR</p>

          <fieldset>
            <div class="field">
              <%= f.email_field :email, class: 'form-control', placeholder: 'Email Address', autofocus: true, required: true %>
            </div>

            <div class="field">
              <%= f.password_field :password, class: 'form-control', placeholder: 'Password', autocomplete: 'off', required: true %>
            </div>

            <div class="field">
              <%= f.submit 'Log In', class: 'btn btn-lg btn-primary btn-block' %>
            </div>

            <p><%= render "devise/shared/links" %></p>
          </fieldset>
      </div>
    </div>
<% end %>
