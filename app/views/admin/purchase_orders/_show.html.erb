<%- model_class = PurchaseOrder -%>

<div class="container">
  <div class="col-lg-12">
    <div class="page-header">
      <h1><%=t '.title', :default => model_class.model_name.human.titleize %>
      </h1>
    </div>
    <dl class="dl-horizontal">
      <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
      <dd><%= @purchase_order.title %></dd>
      <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
      <dd><%= @purchase_order.description %></dd>
      <dt><strong><%= model_class.human_attribute_name(:active) %>:</strong></dt>
      <dd><%= @purchase_order.active %></dd>
      <dt><strong><%= model_class.human_attribute_name(:client_id) %>:</strong></dt>
      <dd><%= @purchase_order.client_id %></dd>
    </dl>

    <%= link_to t('.back', :default => t("helpers.links.back")),
      admin_purchase_orders_path, :class => 'btn btn-default'  %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
      edit_admin_purchase_order_path(@purchase_order), :class => 'btn btn-default' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
      admin_purchase_order_path(@purchase_order),
      :method => 'delete',
      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
      :class => 'btn btn-danger' %>

  </div>
</div>

