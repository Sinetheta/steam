<section class="container">
  <div class="col-lg-12">
    <header>
      <h1><%= @purchase_order.title %></h1>
      <%= active_label @purchase_order.active %>
      <p><%= @purchase_order.client.name %></p>
    </header>

    <p><%= @purchase_order.client.description %></p>

    <footer>
      <%= link_to t('.back', :default => t("helpers.links.back")),
        admin_purchase_orders_path, :class => 'btn btn-default'  %>
      <%= link_to t('.edit', :default => t("helpers.links.edit")),
        edit_admin_purchase_order_path(@purchase_order), :class => 'btn btn-default' %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
        admin_purchase_order_path(@purchase_order),
        :method => 'delete',
        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
        :class => 'btn btn-danger' %>
    </footer>
  </div>
</section>
