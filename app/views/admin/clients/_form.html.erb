<%= simple_form_for [:admin, @client], :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@client[:name]) %>
<br>
  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_clients_path, :class => 'btn btn-default' %>
<% end %>
